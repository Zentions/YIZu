<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/pattern_bg_blue" />

    <TextView
        android:id="@+id/title_message_lose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/linearlayout_line"
        android:gravity="left|center"
        android:text="请输入协商后的损耗率(只填数字即可)："
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:hint="YI租平台规定双方协定的损耗率一般在0%到20%\n如果严重损坏请申请平台进行仲裁"
        android:id="@+id/edit_message_lose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/linearlayout_line"
        android:textSize="16sp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content"
        >
        <TextView
        android:id="@+id/tip"
        android:gravity="center"
        android:textSize="18sp"

        android:textColor="@color/red"
            android:layout_weight="2"
        android:layout_width="0dp"
            android:background="@drawable/linearlayout_line"
        android:layout_height="match_parent"
        />
    <Button
        android:id="@+id/confirm_lose"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确认"
        android:gravity="center"
        android:background="@drawable/linearlayout_line"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

        </LinearLayout>
</LinearLayout>
