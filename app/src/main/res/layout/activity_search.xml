<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.yizu.SearchActivity">
    <LinearLayout
        android:id="@+id/bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/fanhui"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:background="@android:color/white"
            android:src="@drawable/fanhui"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/context"
            android:hint="输入你想租用的物品"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/yuyin"
            android:layout_weight="0.6"
            android:textSize="18sp"
            android:background="@drawable/yuyin"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/search"
            android:layout_weight="1.4"
            android:text="搜索"
            android:textSize="18sp"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/history"
        android:text="历史搜索"
        android:textSize="16sp"
        android:layout_below="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/clear"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bar"
        android:scaleType="centerInside"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/garbage"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flex"
        android:layout_margin="10dp"
        android:layout_below="@id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap">
        <TextView
            android:id="@+id/his1"
            android:text=""
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/his2"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/his3"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/his4"
            android:text=""
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/his5"
            android:text=""
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </com.google.android.flexbox.FlexboxLayout>
    <RelativeLayout
        android:layout_below="@+id/flex"
        android:id="@+id/list1"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ic1"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/skill"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/skill" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="工具"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_toRightOf="@+id/ic1"
            android:id="@+id/ic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/electronic"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/electronic" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/electronic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="数码"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/ic2"
            android:id="@+id/ic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/home1" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="家居"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/ic3"
            android:id="@+id/ic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/study"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/study2" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="学习"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="17dp"
            android:layout_marginLeft="27dp"
            android:layout_below="@+id/ic1"
            android:id="@+id/ic5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/clothes"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/clothes1" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/clothes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="服饰"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/ic2"
            android:layout_toRightOf="@+id/ic5"
            android:id="@+id/ic6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/transportation"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/transportation1" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/transportation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="交通"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/ic2"
            android:layout_toRightOf="@+id/ic6"
            android:id="@+id/ic7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/place"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/place" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="场地"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_below="@+id/ic2"
            android:layout_toRightOf="@+id/ic7"
            android:id="@+id/ic8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/service"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/service" />
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@id/service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="服务"/>
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
